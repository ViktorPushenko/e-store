footer.footer
	.container.clearfix
		div.col-1-4
			div.footer__logo-wrapper
				a.footer__logo-link(href="#")
					img.logo-img(src="img/logo2.png", alt="logo")
					span.header-logo-text ЭпплShop
		div.col-2-4
			div.footer-links__group-wrapper
				ul.footer-links__group
					mixin footer-links__group(group_name, link1, link2, link3, link4)
						li.footer-links__group-item #{group_name}
							ul.footer-links
								li.footer-links__item 
									a.product__description-link(href="#") #{link1}
								li.footer-links__item
									a.product__description-link(href="#") #{link2}
								li.footer-links__item
									a.product__description-link(href="#") #{link3}
								li.footer-links__item
									a.product__description-link(href="#") #{link4}
					+footer-links__group('О магазине', 'О нас', 'Наши цены', 'Наши скидки', 'Акции')
					+footer-links__group('Каталог', 'Смартфоны', 'Планшеты', 'Компьютеры', 'Аксессуары')
					+footer-links__group('Контакты', 'Телефоны', 'Адреса', 'Карта проезда', 'Обратная связь')
		div.col-1-4
			div.footer__icons-wrapper
				div.footer__apps-wrapper
					ul.footer__apps
						li.footer__apps-item
							a.footer__apps-link(href="#")
								span.footer__apps-text Доступно в App Store
						li.footer__apps-item
							a.footer__apps-link(href="#")
								span.footer__apps-text Доступно в Google Play
				div.footer__socials-wrapper
					ul.footer__socials
						li.footer__socials-item
							a.footer__socials-link.icon-vk(href="#")
								span.footer__socials-text В контакте
						li.footer__socials-item
							a.footer__socials-link.icon-vk(href="#")
								span.footer__socials-text Фейсбук
						li.footer__socials-item
							a.footer__socials-link.icon-vk(href="#")
								span.footer__socials-text Твиттер


			


